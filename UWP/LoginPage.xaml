<Page
    x:Class="Vecto.UWP.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Vecto.UWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <StackPanel VerticalAlignment="Center" Spacing="10">
        <TextBlock Text="Vecto" Style="{StaticResource HeaderTextBlockStyle}" HorizontalAlignment="Center"/>
        <TextBox Header="E-mail" Width="320" FontSize="18"/>
        <PasswordBox Header="Password" Width="320" FontSize="18"/>
        <CheckBox Content="Remember Me" FontSize="18" HorizontalAlignment="Center"/>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button x:Name="LoginButton" Content="Log In" FontSize="20" Width="120" HorizontalAlignment="Center" Click="LoginButton_Click"/>
            <HyperlinkButton Content="or create an Account" FontSize="16"/>
        </StackPanel>
    </StackPanel>
</Page>
