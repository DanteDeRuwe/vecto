<Page
    x:Class="Vecto.UWP.Pages.Authentication.RegisterPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Vecto.UWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <StackPanel VerticalAlignment="Center" Height="390" Spacing="10">
        <TextBlock Text="Vecto" Style="{StaticResource HeaderTextBlockStyle}" HorizontalAlignment="Center" Margin="0,0,0,10" />
        <TextBox Header="E-mail" Width="350" FontSize="18"/>
        <PasswordBox Header="Password" Width="350" FontSize="18"/>
        <PasswordBox Header="Repeat Password" Width="350" FontSize="18"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10" Margin="0,10,0,0">
            <Button x:Name="RegisterButton" Content="Register" FontSize="20" Width="120" Click="RegisterButton_Click"/>
            <Button x:Name="CancelButton" Content="Cancel" FontSize="20" Width="120" Click="CancelButton_Click"/>
        </StackPanel>
    </StackPanel>
</Page>
